{
  "listeners": {
    "*:8300": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": "/static/*"
      },
      "action": {
        "share": "/app/vol/web$uri"
      }
    },
    {
      "action": {
        "pass": "applications/app"
      }
    }
  ],
  "applications": {
    "app": {
      "type": "python 3", // Укажите явно тип приложения и версию Python, если это необходимо
      "path": "/app", // Убедитесь, что путь абсолютный и соответствует местоположению вашего приложения в контейнере
      "module": "app.wsgi", // Указывает на модуль, где находится ваш WSGI-объект
      "callable": "application" // Имя переменной в вашем WSGI-модуле, которая ссылается на WSGI-приложение
    }
  }
}
